@model ScheduleMusicPractice.Models.Instrument

@{
    ViewData["Title"] = "Details";
}



<div>
  
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LearningMaterials)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LearningMaterials)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        @if (Model.ProductImage != null)
        {
         
            <dd>
                @{
                    var base64 = Convert.ToBase64String(Model.ProductImage);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                }

                <img class="userImg" src="@imgSrc" />
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
