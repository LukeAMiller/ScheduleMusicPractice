@model IEnumerable<ScheduleMusicPractice.Models.PracticeSession>

@{
    ViewData["Title"] = "Index";
}


<table class="table">
    <thead>
        <tr>
       
            <th>
               Date and Time
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instrument)
            </th>
            <th>
                Practice Method
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model
    )
{
   
    
    if (item.dateTime  !> DateTime.Now)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instrument.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracticeMethod.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
}
    </tbody>
</table>
